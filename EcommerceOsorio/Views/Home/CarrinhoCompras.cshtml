@model IEnumerable<Domain.ItemVenda>

@{
    ViewData["Title"] = "CarrinhoCompras";
}

<h2>CarrinhoCompras</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CriadoEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CriadoEm)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemVendaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemVendaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemVendaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
