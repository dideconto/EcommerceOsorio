<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a asp-action="Index" asp-controller="Home" class="navbar-brand" asp-route-id="">Ecommerce Osório</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="CarrinhoCompras"
                   asp-controller="Home">
                    <h5>
                        Carrinho
                        <span class="badge badge-secondary">
                            Fake
                        </span>
                    </h5>
                </a>
            </li>
        </ul>
    </nav>

    @* Conteúdo *@
    <div class="container" style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>

    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Desenvolvido por Diogo Steinke Deconto
        </p>
    </footer>
</body>
</html>
