@inject Microsoft.AspNetCore.Identity.UserManager<UsuarioLogado> UserManager
@inject Microsoft.AspNetCore.Identity.SignInManager<UsuarioLogado> SignInManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a asp-action="Index" asp-controller="Home" class="navbar-brand" asp-route-id="">Ecommerce Osório</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link"
                   asp-action="CarrinhoCompras"
                   asp-controller="Home">
                    <h5>
                        Carrinho
                        <span class="badge badge-secondary">
                            Fake
                        </span>
                    </h5>
                </a>
            </li>
            @if (SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link"
                       asp-action="Logout"
                       asp-controller="Usuario">
                        <h5>Olá, @UserManager.GetUserName(User) - Logout</h5>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link"
                       asp-action="Login"
                       asp-controller="Usuario">
                        <h5>Login</h5>
                    </a>
                </li>
            }
        </ul>
    </nav>

    @* Conteúdo *@
    <div class="container" style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>

    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Desenvolvido por Diogo Steinke Deconto
        </p>
    </footer>
</body>
</html>
